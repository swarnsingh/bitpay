<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pay.bitpay.ui.otp.OTPConfirmFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="60dp"
        android:text="Please enter the verification code sent to"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/otp_mobile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/otp_mobile_no_edit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="200dp"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:inputType="number"
        android:background="@drawable/edit_txt_background"
        android:hint="Verification code"
        android:padding="16dp">

    </android.support.design.widget.TextInputEditText>


    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/otp_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="verify"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.ButtonBarLayout>
</LinearLayout>
